<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/common_header_layout" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/line1t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名字："/>

        <EditText
            android:id="@+id/line1e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint=""/>

    </LinearLayout>

    <include layout="@layout/linelayout" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/line2t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电话："
            android:textColor="#000000"/>

        <EditText
            android:id="@+id/line2e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint=""/>

    </LinearLayout>

    <include layout="@layout/linelayout" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/line3t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="图片："/>

        <EditText
            android:id="@+id/line3e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint=""/>

    </LinearLayout>

    <include layout="@layout/linelayout" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/line4t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别"/>

        <EditText
            android:id="@+id/line4e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint=""/>

    </LinearLayout>

    <include layout="@layout/linelayout" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/line5t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="价格"/>

        <EditText
            android:id="@+id/line5e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint=""/>

    </LinearLayout>

    <include layout="@layout/linelayout" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/line6t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="额外要求"/>

        <EditText
            android:id="@+id/line6e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint=""/>

    </LinearLayout>

    <include layout="@layout/linelayout" />

    <Button
        android:id="@+id/sendbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/entry_blue"
        android:text="提交"/>



</LinearLayout>